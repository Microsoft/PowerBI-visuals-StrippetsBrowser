<div class="thumbnail" data-id="{{id}}">
    <div class="card">
        {{#if imageUrl}}
            <div class="card-image">
            </div>
        {{/if}}
        <div class="card-body">
            {{#if titleonly}}
                <h1 class="title titleonly">{{title}}</h1>
            {{else}}
                <h1 class="title">{{title}}</h1>
            {{/if}}
            <ul class="meta-line">
                <li class="author">{{author}}</li>
                {{#if articledate}}
                    <li>
                        <time class="updated" datetime="{{articledate}}" pubdate="">{{formattedDate}}</time>
                    </li>
                {{/if}}
            </ul>
            <p>{{{summary}}}</p>
        </div>
        <div class="card-icon"></div>
    </div>
    <div class="inline-reader-container"></div>
</div>